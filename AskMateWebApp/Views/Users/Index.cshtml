@model UserListModel
@{
    ViewData["Title"] = "Users";
}
<h1>@ViewData["Title"]</h1>
<hr />
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Username</th>
                <th scope="col">Question Count</th>
                <th scope="col">Answer Count</th>
                <th scope="col">Comment Count</th>
                <th scope="col">Registration Time</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Users.Count; i++)
            {
                <tr>
                    <th scope="row">@Model.Users[i].Id</th>
                    <td><a asp-controller="Users" asp-action="Details" asp-route-id="@Model.Users[i].Id">@Model.Users[i].Username</a></td>
                    <td>@Model.Users[i].QuestionCount</td>
                    <td>@Model.Users[i].AnswerCount</td>
                    <td>@Model.Users[i].CommentCount</td>
                    <td>@Model.Users[i].RegistrationTime</td>
                </tr>
            }
        </tbody>
    </table>
</div>
